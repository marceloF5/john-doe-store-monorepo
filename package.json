{
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "clean": "turbo clean",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "ds:add": "yarn --filter ds ds:add"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-custom": "*",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.0",
        "pinst": "^3.0.0",
        "turbo": "latest"
    },
    "packageManager": "yarn@1.22.19",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "lint-staged": {
        "apps/**/*.{js,jsx,ts,tsx}": ["eslint --fix"],
        "packages/**/*.{js,jsx,ts,tsx}": ["eslint --fix"]
    }
}
